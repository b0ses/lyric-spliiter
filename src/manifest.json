{
    "manifest_version": 3,
    "name": "Lyrics Splitter",
    "version": "1.10",
  
    "description": "Reorganizes popular lyrics sites to display all the lyrics on one page without needing to scroll.",
    "homepage_url": "https://github.com/b0ses/lyrics-splitter",
  
    "permissions": [],

    "icons": {
      "48": "icons/48.png"
    },

    "browser_specific_settings": {
      "gecko": {
        "id": "{f628929b-e4d1-4b84-9111-c2b4e78566a6}"
      }
    },    
    
    "content_scripts": [
        {
          "matches": [
            "*://genius.com/*"
          ],
          "js": ["lyric-splitter.js"]
        }
    ]
  }
